@{
    ViewData["Title"] = "Order List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-dashboard.css" />
}

<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-header">Inventory</div>
        <nav class="sidebar-nav">
            <a href="@Url.Action("Index", "Admin")" class="nav-item">Dashboard</a>
            <a href="@Url.Action("Employees", "Admin")" class="nav-item">Employees</a>
            <a href="@Url.Action("Purchase", "Admin")" class="nav-item">Category</a>
            <a href="@Url.Action("Stock", "Admin")" class="nav-item">Stock</a>
            <a href="@Url.Action("Menu", "Admin")" class="nav-item">Menu</a>
            <a href="@Url.Action("OrderList", "Admin")" class="nav-item active">Order List</a>
        </nav>
        <a href="@Url.Action("Logout", "Authenticator")" class="logout-btn">Log out</a>
    </aside>

    <main class="main-content">
        <div class="top-bar">
            <span class="greeting">Hello, Salvo!</span>
        </div>

        <div class="table-box">
            <div class="table-header">
                Order List
                <span class="table-subheader">Last Updated by: Kenji Calibara</span>
                <a href="#" class="btn btn-primary">Add More</a>
            </div>

            <div class="search-bar">
                <label>Search Date</label>
                <input type="date" class="form-control" />
            </div>

            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Customer Name</th>
                        <th>Address</th>
                        <th>Contact Number</th>
                        <th>Order</th>
                        <th>Delivery Date</th>
                        <th>Date Added</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Sean Salvo</td>
                        <td>#5 Phase One Taguig City</td>
                        <td>09982378956</td>
                        <td><a href="@Url.Action("OrderDetails", "Home", new { id = 1 })" class="see-order">See Order</a></td>
                        <td>04-04-25</td>
                        <td>03-03-25</td>
                        <td>
                            <a href="#" class="action-icon edit"><i class="fas fa-edit"></i></a>
                            <a href="#" class="action-icon delete"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Trisha Abenganal</td>
                        <td>Pc Road Zone 4 Taguig City</td>
                        <td>09983695881</td>
                        <td><a href="@Url.Action("OrderDetails", "OrderList", new { id = 2 })" class="see-order">See Order</a></td>
                        <td>04-04-25</td>
                        <td>03-03-25</td>
                        <td>
                            <a href="#" class="action-icon edit"><i class="fas fa-edit"></i></a>
                            <a href="#" class="action-icon delete"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
</div>
