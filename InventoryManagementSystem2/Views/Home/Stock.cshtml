@model List<InventoryManagementSystem2.Models.StockViewModel>

@{
    ViewData["Title"] = "Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-dashboard.css" />
    <style>
        .modal {
            z-index: 1050;
        }

        .modal-backdrop {
            z-index: 1040;
        }
    </style>
}

<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-header">Inventory</div>
        <nav class="sidebar-nav">
            <a href="@Url.Action("Index", "Admin")" class="nav-item">Dashboard</a>
            <a href="@Url.Action("Employees", "Admin")" class="nav-item">Employees</a>
            <a href="@Url.Action("Purchase", "Admin")" class="nav-item">Category</a>
            <a href="@Url.Action("Stock", "Admin")" class="nav-item active">Stock</a>
            <a href="@Url.Action("Menu", "Admin")" class="nav-item">Menu</a>
            <a href="@Url.Action("OrderList", "Admin")" class="nav-item">Order List</a>
        </nav>
        <a href="/AdminAuth/Logout" class="logout-btn">Log out</a>
    </aside>

    <main class="main-content">
        <div class="top-bar">
            <span class="greeting">Hello, Salvo!</span>
        </div>

        <div class="table-header" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; margin-bottom: 15px;">

            <div>
                <strong>Stock</strong><br />
                <small style="color: #444;">Last Updated by: <strong>Keyri Calibara</strong></small>
            </div>
            <div>
                <button class="btn btn-primary" data-toggle="modal" data-target="#addItemModal">Add New Ingredient</button>
                <button class="btn btn-secondary" id="openReplenishModal">Replenish Stock</button>
            </div>
        </div>

        <table class="styled-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>In-Stock</th>
                    <th>Date Added</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stock in Model)
                {
                    <tr>
                        <td>@stock.IngredientID</td>
                        <td>@stock.IngredientName</td>
                        <td>@stock.CategoryName</td>
                        <td>@stock.InStock</td>
                        <td>@(stock.LastReplenished.ToString("yyyy-MM-dd") ?? "N/A")</td>
                        <td>
                            <a href="@Url.Action("EditStock", "Admin", new { id = stock.IngredientID })" class="btn btn-primary btn-sm">Edit</a>
                            <button type="button" class="btn btn-success btn-sm replenish-btn"
                                    data-id="@stock.IngredientID"
                                    data-name="@stock.IngredientName">
                                Replenish
                            </button>
                            <a href="@Url.Action("DeleteStock", "Admin", new { id = stock.IngredientID })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</div>

<!-- Add Ingredient Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1" role="dialog" aria-labelledby="addItemModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="@Url.Action("AddStock", "Admin")" method="post" autocomplete="off">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Ingredient</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="ingredientName">Ingredient Name</label>
                        <input type="text" class="form-control" id="ingredientName" name="ingredientName" required />
                    </div>
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select class="form-control" id="category" name="category" required>
                            <option value="">Select Category</option>
                            @foreach (var category in Model.Select(x => x.CategoryName).Distinct(StringComparer.OrdinalIgnoreCase))
                            {
                                <option value="@category">@category</option>
                            }
                            <option value="__other__">Other (specify)</option>
                        </select>
                        <input type="text" class="form-control mt-2" id="customCategory" name="customCategory" placeholder="Enter new category" style="display:none;" />
                    </div>
                    <div class="form-group">
                        <label for="unit">Unit of Measurement</label>
                        <select class="form-control" id="unit" name="unit" required>
                            <option value="">Select Unit</option>
                            <option value="g">Grams (g)</option>
                            <option value="kg">Kilograms (kg)</option>
                            <option value="ml">Milliliters (ml)</option>
                            <option value="l">Liters (l)</option>
                            <option value="pcs">Pieces (pcs)</option>
                            <option value="packs">Packs</option>
                            <option value="bottles">Bottles</option>
                            <option value="sheets">Sheets</option>
                            <option value="rolls">Rolls</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="inStock">In-Stock Quantity</label>
                        <input type="number" class="form-control" id="inStock" name="inStock" min="0" required />
                    </div>
                    <div class="form-group">
                        <label for="replenishmentDate">Replenishment Date</label>
                        <input type="date" class="form-control" id="replenishmentDate" name="replenishmentDate" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Ingredient</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Replenish Stock Modal -->
<div class="modal fade" id="replenishModal" tabindex="-1" role="dialog" aria-labelledby="replenishModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="@Url.Action("ReplenishStock", "Admin")" method="post" autocomplete="off">
                <div class="modal-header">
                    <h5 class="modal-title">Replenish Stock</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="replenishIngredientId" name="ingredientId" />
                    <div class="form-group">
                        <label>Ingredient</label>
                        <input type="text" class="form-control" id="replenishIngredientName" disabled />
                    </div>
                    <div class="form-group">
                        <label for="replenishQuantity">Quantity to Add</label>
                        <input type="number" class="form-control" id="replenishQuantity" name="quantity" min="1" required />
                    </div>
                    <div class="form-group">
                        <label for="replenishDate">Replenishment Date</label>
                        <input type="date" class="form-control" id="replenishDate" name="replenishmentDate" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Replenish</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.replenish-btn').on('click', function () {
                const id = $(this).data('id');
                const name = $(this).data('name');
                $('#replenishIngredientId').val(id);
                $('#replenishIngredientName').val(name);
                $('#replenishModal').modal('show');
            });

            $('#openReplenishModal').on('click', function () {
                $('#replenishIngredientId').val('');
                $('#replenishIngredientName').val('');
                $('#replenishModal').modal('show');
            });

            // Show/hide custom category input
            $('#category').on('change', function () {
                if ($(this).val() === '__other__') {
                    $('#customCategory').show().attr('required', true);
                    $(this).attr('name', 'categoryOld');
                    $('#customCategory').attr('name', 'category');
                } else {
                    $('#customCategory').hide().removeAttr('required');
                    $('#customCategory').attr('name', 'customCategory');
                    $(this).attr('name', 'category');
                }
            });
        });
    </script>

}
