@model InventoryManagementSystem2.Models.LoginViewModel

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="login-container">
    <div class="left-panel">
        <div class="form-container">

            <div id="loginForm" class="form-section">
                <h3 class="mb-3 text-center">Log In</h3>
                <p class="text-muted text-center">Provide all required information to access your account</p>

                <form asp-controller="AdminAuth" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(false, "", new { @class = "text-danger text-center mb-2" })

                    <div class="form-group text-start">
                        <label for="Username">Username</label>
                        <input asp-for="Username" class="form-control" placeholder="Enter username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group text-start mt-3">
                        <label for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-end mt-2">
                        <a href="#">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn btn-login w-100 mt-3">Log In</button>
                </form>

                <div class="mt-3 text-center">
                    <span>Don’t have an account?</span>
                    <a href="@Url.Action("RegisterUser", "AdminAuth")">Create an account</a>
                </div>
            </div>

        </div>
    </div>

    <div class="right-panel">
        <div class="image-container">
            <img src="~/images/background.png" alt="Background" class="background-image" />
            <img src="~/images/foreground.png" alt="Foreground" class="foreground-image" />
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
