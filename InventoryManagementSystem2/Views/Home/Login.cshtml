@model InventoryManagementSystem2.Models.LoginViewModel

<link rel="stylesheet" href="/css/login.css" />

<div class="login-container">
    <div class="left-panel">
        <div class="form-container">

            <div id="loginForm" class="form-section">
                <h3 class="mb-3 text-center">Log In</h3>
                <p class="text-muted text-center">Provide all required information to access your account</p>

                <form asp-controller="AdminAuth" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(false, "", new { @class = "text-danger text-center mb-2" })

                    <div class="form-group text-start">
                        <label for="Username">Username</label>
                        <input asp-for="Username" class="form-control" placeholder="Enter username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group text-start mt-3">
                        <label for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-end mt-2">
                        <a href="#">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn btn-login w-100 mt-3">Log In</button>
                </form>

                <div class="mt-3 text-center">
                    <span>Don’t have an account?</span>
                    <a href="#" onclick="toggleForm('register')">Create an account</a>
                </div>
            </div>

            <div id="registerForm" class="form-section d-none">
                <h3 class="mb-3 text-center">Create an account</h3>
                <p class="text-muted text-center">Provide all required information to create your account</p>

                <form asp-controller="AdminAuth" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group text-start">
                        <label>Username</label>
                        <input name="Username" class="form-control" placeholder="Enter username" required />
                    </div>

                    <div class="form-group text-start mt-3">
                        <label>Password</label>
                        <input name="Password" type="password" class="form-control" placeholder="Enter password" required />
                    </div>

                    <div class="form-group text-start mt-3">
                        <label>Confirm Password</label>
                        <input name="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter password" required />
                    </div>

                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" name="AcceptTerms" id="termsCheck" required />
                        <label class="form-check-label" for="termsCheck">
                            I agree to the <a href="#">terms and conditions</a>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-login w-100 mt-3">Create Account</button>

                    <div class="mt-3 text-center">
                        <span>Already have an account?</span>
                        <a href="#" onclick="toggleForm('login')">Log In</a>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <div class="right-panel">
        <div class="image-container">
            <img src="~/images/background.png" alt="Background" class="background-image" />
            <img src="~/images/foreground.png" alt="Foreground" class="foreground-image" />
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        function toggleForm(form) {
            const login = document.getElementById("loginForm");
            const register = document.getElementById("registerForm");

            if (form === "register") {
                login.classList.add("d-none");
                register.classList.remove("d-none");
            } else {
                register.classList.add("d-none");
                login.classList.remove("d-none");
            }
        }
    </script>
}
