@model InventoryManagementSystem2.Models.LoginViewModel

<link rel="stylesheet" href="/css/login.css" />

<div class="login-container">
    <div class="left-panel">
        <div class="form-container">
            <h3 class="mb-3 text-center">Log In</h3>
            <p class="text-muted text-center">Provide all required information to access your account</p>

            <form asp-controller="AdminAuth" asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <!-- 👇 Add this block for showing model-level validation (e.g., invalid credentials) -->
                @Html.ValidationSummary(false, "", new { @class = "text-danger text-center mb-2" })

                <div class="form-group text-start">
                    <label for="Username">Email</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group text-start mt-3">
                    <label for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-end mt-2">
                    <a href="#">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-login w-100 mt-3">Log In</button>
            </form>

            <div class="mt-3 text-center">
                <span>Already have an account?</span>
                <a href="#">Create an account</a>
            </div>
        </div>
    </div>

    <div class="right-panel">
        <div class="image-container">
            <img src="~/images/background.png" alt="Background" class="background-image" />
            <img src="~/images/foreground.png" alt="Foreground" class="foreground-image" />
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
