@{
    ViewData["Title"] = "Purchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-dashboard.css" />
}

<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-header">Inventory</div>
        <nav class="sidebar-nav">
            <a href="@Url.Action("Index", "Admin")" class="nav-item">Dashboard</a>
            <a href="@Url.Action("Employees", "Admin")" class="nav-item">Employees</a>
            <a href="@Url.Action("Purchase", "Admin")" class="nav-item active">Purchases</a>
            <a href="@Url.Action("Stock", "Admin")" class="nav-item">Stock</a>
            <a href="@Url.Action("Index", "Admin")" class="nav-item">Menu</a>
            <a href="@Url.Action("Index", "Admin")" class="nav-item">Order List</a>
        </nav>
        <a href="@Url.Action("Logout", "Authenticator")" class="logout-btn">Log out</a>
    </aside>

    <main class="main-content">
        <div class="top-bar">
            <span class="greeting">Hello, Salvo!</span>
        </div>

        <div class="table-box">
            <div class="table-header">Add New Purchase Type</div>
            <form method="post" asp-action="AddPurchase" class="category-form">
                <input type="text" name="PurchaseName" class="category-input" placeholder="Enter purchase type" required />
                <button type="submit" class="btn btn-primary">Add Purchase</button>
            </form>
        </div>

        <div class="table-box">
            <div class="table-header">Purchase List</div>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>1</td>
                        <td>Garnish</td>
                        <td>
                            <a href="#" class="action-icon edit"><i class="fas fa-edit"></i></a>
                            <a href="#" class="action-icon delete"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Condiment</td>
                        <td>
                            <a href="#" class="action-icon edit"><i class="fas fa-edit"></i></a>
                            <a href="#" class="action-icon delete"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
</div>
